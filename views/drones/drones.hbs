<!DOCTYPE html>
<html>
<head>
  <title>{{title}}</title>
  <!-- ... (other meta tags, styles, scripts) -->
  <!-- ... other meta tags ... -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/style.css"> <!-- Link to your custom CSS -->
  <!-- ... other stylesheets ... -->
</head>
<body>
  <header>
    <nav class="nav-bar">
      <a href="/" class="nav-link">Home</a>
      <a href="/drones" class="nav-link">List Drones</a>
      <!-- Add other navigation links as needed -->
    </nav>
  </header>

  <main>
    <div class="container">
      <h2>Drone List</h2>
      <div class="drone-list">
        <!-- Drone cards will be dynamically generated here -->
        <div class="drone-card">
          {{#each drones}}
          <div class="drone-item">
            <h3>{{name}}</h3>
            <p>Propellers: {{propellers}}</p>
            <p>Max Speed: {{maxSpeed}} m/s</p>
            <button class="btn btn-primary">Edit</button>
            <button class="btn btn-danger">Delete</button>
          </div>
          {{/each}}
        </div>
        <div class="drone-card">
          <a href="/add" class="btn btn-primary">Add New Drone</a>
        </div>
      </div>
    </div>
  </main>

  <footer>
    <!-- ... (footer content) -->
  </footer>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
