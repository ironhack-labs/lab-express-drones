<h2>Available drones</h2>
{{#each drones}}
<div>
    <h3>{{name}}</h3>
    <p>Propellers: {{propellers}}</p>
    <p>Max Speed: {{maxSpeed}}</p>
     <a href="/drones/{{_id}}">See Details</a>
    <a href="/drones/{{_id}}/edit">Edit the Drone</a>
    <form action="/drones/{{_id}}/delete" method="post">
    <button>Delete</button>
    </form>
</div>
{{/each}}