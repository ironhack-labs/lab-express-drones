<h2>Available drones</h2>

{{#each drones}}

<div>
    <h3>{{name}}</h3>
    <p>{{propellers}}</p>
    <p>{{maxSpeed}}</p>
    <a href="/drones/{{_id}}/edit">Edit Drone!</a>
</div>

<form action="/drones/{{id}}/delete" method = "post">
<button type = "submit">Delete drone!</button>
</form>

{{/each}}

<a href="/drones/create">Create a Drone!</a>
