<h2>Available drones</h2>

{{#each drones}}
<div class="drones-container">
    <p>{{this.name}}</p> 
    <p>{{this.propellers}}</p>
    <p>{{this.maxSpeed}}</p>

    <p>
        <a href="/drones/{{this._id}}/edit">update</a><br>
        <a href="/drones/{{this._id}}/delete">delete</a>
    </p>
</div>
{{/each}}