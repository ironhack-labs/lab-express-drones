<h1>Drones</h1>
{{#each drones}}
    <div>
        <h3>{{name}}</h3>
        <p>{{propellers}}</p>
        <p>Maximum Spead: {{maxSpeed}}</p>
        <a href="/drones/{{_id}}/edit">Edit the Drone</a>

        <form action="/drones/{{_id}}/delete" method="post">
            <button type="submit">Delete</button>
        </form> 
    </div>
{{/each}}