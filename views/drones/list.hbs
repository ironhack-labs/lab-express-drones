<h2>Available drones</h2>



<div class="list">

{{#each drones}}

<hr/>
<div >
    <h3>{{name}}</h3>

    <p>Propellers: {{propellers}}</p>
    <p>Maximum Speed: {{maxSpeed}}</p>

    <a href="/drones/{{_id}}/edit" class="edit">Edit</a>

    <form action="/drones/{{_id}}/delete" method="post">
    <button type="submit" class="delete">Delete drone</button>
    </form>

</div>

<hr/>
{{/each}}

</div>
