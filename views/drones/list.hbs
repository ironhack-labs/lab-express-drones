<div class="container d-flex gap-3 flex-wrap justify-content-center">
    <h2>Available drones</h2>
    <hr>

    <div class="card ">
        {{#each drones}}
            <h3>{{name}}</h3>
            <ul class="li">
                <p>{{propellers}}</p>
            </ul>
            <ul class="li">
                <p>{{maxSpeed}}</p>
            </ul>
            <a href="/drones/{{_id}}/edit" class="btn btn-dark">Edit</a>

            <form action="/drones/{{_id}}/delete" method="POST">
                <input type="submit" value="Delet" class="btn btn-danger">
            </form>
        {{/each}}
    </div>
</div>

<hr>

<a href="/" class="btn btn-dark">Volver a incio</a>
</div>