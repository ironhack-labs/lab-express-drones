<div class="well well-lg">
<h1>Available drones</h2>
</div>
{{#each drones}}
<div class="panel panel-primary">
  <div class="panel-heading">{{this.name}}</div>
  </div>
  <ul class="list-group">
    <li class="list-group-item"><br>Number of propellers:<span class="badge">{{this.propellers}}</span></li>
    <li class="list-group-item"><br>Top Speed:<span class="badge">{{this.maxSpeed}}</span></li>
    <li class="list-group-item"><a href="/drones/{{this._id}}/edit"><button type="button" class="btn btn-info btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</button></a></li>
    <li class="list-group-item"><form action="/drones/{{_id}}/delete" method="POST">
      <button type="button" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete</button></li>
  </ul>
</div>
{{/each}}
<a class="btn btn-info btn-lg" href="/drones" role="button">See the list of drones!</a>
<a class="btn btn-primary btn-lg" href="/" role="button">Back to homepage</a>