<h2>Available drones</h2>
    {{#each all}}
<div class="drone">
    <p>{{this.name}}</p>
    <p>{{this.propellers}}</p>
    <p>{{this.maxSpeed}}</p>
    <p><a href="/drones/{{this._id}}/edit">Edit Drone</a></p>
<form method="POST" action="/drones/{{this._id}}/delete">
    <button type="submit">Delete Drone</buttton>
</form>
</div>
    {{/each}}