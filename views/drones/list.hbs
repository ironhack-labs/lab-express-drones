<h2>Available drones</h2>

<div class="row">
{{#each drones as |drone|}}
    <div class="col-4">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Name: {{drone.name}}</h5>
                <p class="card-text">Propeller: {{drone.propellers}}</p>
                <p class="card-text">Max Speed: {{drone.maxSpeed}}</p>
                <a href="/drones/{{drone.id}}" class="btn btn-primary">View details</a>
                <a href="/drones/{{drone.id}}/edit" class="btn btn-secondary">Edit</a>

                <form action="/drones/{{drone.id}}/delete" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
{{/each}}
</div>
