<h2>Available drones</h2>

{{#each dronesDB}}
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Name:{{name}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">Number of propellers: {{propellers}}</h6>
    <h6 class="card-subtitle mb-2 text-muted">Maximum speed: {{maxSpeed}}</h6>
    <a href='/drones/{{_id}}/edit' class="card-link">Edit</a>
     <form action="/drones/{{_id}}/delete" method="POST">
      <button>Delete</button>
    </form>
  </div>
</div>
{{/each}}

