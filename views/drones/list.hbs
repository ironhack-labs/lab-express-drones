<div>
    <h2>Available drones</h2>

    {{#each drones}}
    <h1>Drone {{this.name}}</h1>
    <h1>Prop {{this.propellers}}</h1>
    <h1>MaxSpeed {{this.maxSpeed}}</h1>

    <a href="/drones/{{this._id}}/edit">Edit</a>
    <form action="/drones/{{this._id}}/delete" method="POST">
        <button>Delete</button>
    </form>
    ==========================
    {{/each}}
    <br>
    <a href="/drones/create">Add</a>
</div>