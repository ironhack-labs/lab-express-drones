<h2>Available drones</h2>

{{#each drones}}
  <div>
    <p>
      Name:
      {{this.name}}
    </p>
    <p>
      Propellers:{{this.propellers}}
    </p>
    <p>
      Max Speed:{{this.maxSpeed}}
    </p>
    <a href="/drones/{{this.id}}/edit">Edit Drone</a>
    <br />
    <br />
    <form action="/drones/{{this.id}}/delete" method="POST">
      <button type="submit">Delete</button></form>
  </div>
  <hr />
{{/each}}