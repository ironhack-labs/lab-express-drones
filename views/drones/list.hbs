<h2>Available drones</h2>

{{#each drones}}
    <hr>
    <p>{{this.name}}</p>
    <p>Nr. of propellers: {{this.propellers}}</p>
    <p>Speed: {{this.maxSpeed}}</p>
    <a href="/drones/{{_id}}/edit">Edit</a>
    <form action="/drones/{{_id}}/delete" method="POST">
      <button>Delete</button>
    </form>
    <br>
{{else}}
    <p>No drones</p>
{{/each}}
<hr>
<br>
<a href="/drones/create">Create a drone</a>