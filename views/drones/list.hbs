<h2>Available drones</h2>

{{#each drones}}
  <div class="drone-list"> 
    <h4>Name: {{name}}</h4>
    <h4>Propellers: {{propellers}}</h4>
    <h4>Speed: {{maxSpeed}}</h4>
  </div>
  <a href="/drones/{{_id}}/edit">Update Drone</a>
  <form action="/drones/{{_id}}/delete" method="POST">
    <button>Delete Drone</button>
  </form>
{{/each}}