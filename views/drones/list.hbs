<h2>Available drones</h2>

{{#each drones}}
	<div>

		<hr />
		<p>name: {{name}} </p>
		<p>propellers: {{propellers}} </p>
		<p>speed: {{maxSpeed}} </p>

		<a
			method="POST"
			href="/drones/{{_id}}/edit"
			class="btn edit-button"
		>edit</a>

		<form action="/drones/{{_id}}/delete" method="POST">
			<button>Delete</button>
		</form>
		<hr />
	</div>
{{/each}}