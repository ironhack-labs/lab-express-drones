<h2>Available drones</h2>
<div class="drones">
  {{#each drones}}
    <div class="drone-card">
      <img src="/images/drone.jpg" alt="" class="imgDrone" />
      <h5>{{name}}</h5>
      <h5>Propellers:{{propellers}}</h5>
      <h5>Max Speed:{{maxSpeed}}</h5>
      <div class="box-button">
        <button type="submit"><a href="/drones/{{_id}}/edit">Update</a></button>
        <form action="/drones/{{_id}}/delete" method="post">
          <button type="submit">Delete the drone</button>
        </form>
      </div>

    </div>

  {{/each}}
</div>