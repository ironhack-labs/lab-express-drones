<h2>Available drones</h2>
<div class="container">
    <div class="row">
        {{#each droneElement}}
            <div class="col.4">
                <h3>{{name}}</h3>
                <p>Propellers: {{propellers}}</p>
                <p>Speed: {{maxSpeed}}</p>
                <a href="/drones/{{_id}}/edit">Edit</a>
                <form action="/drones/{{_id}}/delete" method="post">
                    <button type="submit">Delete</button>
                </form>
            </div>
        {{/each}}
    </div>
</div>