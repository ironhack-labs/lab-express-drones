<div class="listTitle">
  <h2>Available drones</h2>
</div>
<div class="createBtnDiv">
  <a href="/drones/create" class="createBtn">Create a new drone</a>
</div>
<div class="allDrones">
  {{#each drones}}
    <div class="eachDrone">
      <h4>{{name}}</h4>
      <p>Amount of propellers: {{propellers}}</p>
      <p>Max Speed: {{maxSpeed}}</p>
      <div class="listBtns">
        <a href="/drones/{{_id}}/edit" class="updateBtn">Update</a>
        <form action="/drones/{{_id}}/delete" method="post" class="listBtns">
          <button type="submit" class="deleteBtn">Delete</button>
        </form>
      </div>

    </div>
  {{/each}}
</div>