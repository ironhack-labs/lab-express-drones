<div class="d-flex flex-column align-items-center justify-content-center pb-3">
  <h1 class="text-center pt-5 pb-3 fw-bolder">Available drones</h1>
  <a href="/drones/create" class="btn btn-primary p-2 fw-bolder" role="button">Create new
    drone</a>
</div>
<div class="d-flex flex-row justify-content-center px-5 pt-3">
  {{#each drones}}
    <div class="card px-3 border-0 h-100" style="width: 18rem;">
      <img
        src="https://camo.githubusercontent.com/e4f8a091d509be9d0c56a9198373f91b17136344edf7156bd5ec8f15506c0a71/68747470733a2f2f73332d65752d776573742d312e616d617a6f6e6177732e636f6d2f69682d6d6174657269616c732f75706c6f6164732f75706c6f61645f39323665373564343566326139393731353266343430313834346233623464352e6a7067"
        class="card-img-top"
        alt="..."
      />
      <div class="card-body">
        <h5 class="card-title"><strong>Name:</strong> {{this.name}}</h5>
        <h5 class="card-title"><strong
          >Propellers:</strong>{{this.propellers}}</h5>
        <h5 class="card-title"><strong>Max Speed:</strong>{{this.maxSpeed}}</h5>
        <a href="/drones/{{id}}" class="btn btn-primary d-flex flex-column justify-content-center" role="button">See more</a>
      </div>
    </div>

  {{/each}}
</div>