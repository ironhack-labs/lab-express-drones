<div class="container mt-3 mb-4">
  <a href="/">Volver a la página principal</a>
  <a href="/create-form">Crear Dron</a>
  <h2>Nuestros productos más destacados</h2>

  <div class="mt-3 row row-cols-1 row-cols-md-3 g-4">
    {{#each drones as |drone|}}
      <div class="col">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{drone.name}}</h5>
            <p class="card-text">Propellers: {{drone.propellers}}</p>
            <p class="card-text">Max Speed: {{drone.maxSpeed}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
