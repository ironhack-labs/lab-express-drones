<h1>Available drones</h1>
<hr>

<div class="container">
    <div class="row">
        <div class="col md-3">Name</div>
        <div class="col md-3">Propeller number</div>
        <div class="col md-3">Max Speed</div>
        <div class="col md-3">Interactions</div>

    </div>
    {{#each data}}
    <div class="row mt-5">
        <div class="col md-3">{{name}}</div>
        <div class="col md-3">{{propellers}}</div>
        <div class="col md-3">{{maxSpeed}}</div>
        <div class="col md-3">
            <a href="/drones/{{_id}}/edit"> Edit</a>
            <form action="/drones/{{id}}/delete" method="POST">
                <input type="submit" value="eliminar" class="btn btn-danger btn-sm">
            </form>
        </div>

    </div>
    {{/each}}
</div>
<hr>