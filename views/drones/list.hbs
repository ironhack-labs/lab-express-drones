<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <h2>Available drones</h2>
            <hr>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Propellers</th>
                        <th scope="col">Speed m/s</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each drones}}

                    <tr>
                        <td>{{name}}</td>
                        <td>{{propellers}}</td>
                        <td>{{maxSpeed}}</td>
                        <td><a href="/drones/{{_id}}/edit">Edit</a></td>
                        {{!-- <td><a href="/drones/{{_id}}/delete">Delete</a></td> --}}
                        <td>
                            <form action="/drones/{{_id}}/delete" method="POST">
                                <input type="submit" value="Delete">
                            </form>
                        </td>
                    </tr>

                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>

</div>