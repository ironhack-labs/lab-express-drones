<a href="/" class="go-back">Go back</a>
<h2 class="h2">Available drones</h2>

<div class="container">
  <div class="row">
    {{#each drones}}
    <div class="col-4">
      <div class="drones-display">
        <h3>{{this.name}}</h3>
        <p>Number of propellers: {{this.propellers}}</p>
        <p>Max speed: {{this.maxSpeed}}</p>
        
        <form action="/drones/{{this.id}}/edit" method="GET">
          <button type="submit" class="button-edit-delete">Edit drone info</button>
        </form>
        <br>
        <form action="/drones/{{this.id}}/delete" method="POST">
          <button type="submit" class="button-edit-delete">Delete drone!</button>
        </form>

      </div>

    </div>
    {{/each}}
  </div>
</div>


