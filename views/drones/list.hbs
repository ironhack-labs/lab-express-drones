<h2>Available drones</h2>

{{#each drones}}
    <div>
        <h3>{{name}}</h3>
        <p>Propellers: {{propellers}}</p>
        <p>Max Speed: {{speed}} km/h</p>
        <a href="/drones/{{_id}}/edit">Edit this drone</a>
        <form action="/drones/{{_id}}/delete" method="post"><button type="submit">Delete Drone</button></form>
    </div>
{{/each}}

<a href="/drones/create">Create a new Drone</a>