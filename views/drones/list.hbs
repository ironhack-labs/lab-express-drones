<h2>Available drones</h2>

{{#each drones}}
    <p><b>Name:</b> {{name}}</p>
    <p><b>Propellers:</b> {{propellers}}</p>
    <p><b>Max Speed:</b> {{maxSpeed}}</p>
    <p><a href="/drones/{{_id}}/edit">Update Drone details</a> </p>
    
    <form action="/drones/{{_id}}/delete" method="POST">
        <button type="submit">Delete</button>
    </form>

    <hr>
{{/each}}