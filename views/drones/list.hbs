<h2>Available drones</h2>

{{#each drones}}
<div>
    <h2>{{this.name}}</h2>
    <p>
        Number of propellers: {{this.propellers}} <br />
        Maximum Speed: {{this.maxSpeed}} <br />
    </p>

    <a href="/drones/{{this._id}}/edit">Edit</a>
    
    <form action="/drones/{{_id}}/delete" method="post">
        <button>Delete</button>
    </form>
</div>

{{/each}}