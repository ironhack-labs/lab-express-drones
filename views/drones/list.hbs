<div class="row justify-content-center text-center">
    <h2>Available drones</h2>
    <hr>

    {{#each drones}}
    <div class="col-3 text-center mt-3">
        <div class="card" style="width: 18rem;">
            <h2 class="pt-3">{{name}}</h2>
            <h5>propellers : {{propellers}}</h5>
            <h5>Max speed: {{maxSpeed}}</h5>
            <div class="row justify-content-around mt-3">

                <div class="col-4 d-grid">
                    <a class="btn btn-dark mb-3" href="/drones/{{_id}}/edit" role="button">Edit</a>
                </div>
                <div class="col-4 ">
                    <form action=" /drones/{{_id}}/delete" method="POST">
                        <div class="col-auto d-grid">
                            <button type="submit" class="btn btn-danger mb-3">Delete</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    {{/each}}

</div>