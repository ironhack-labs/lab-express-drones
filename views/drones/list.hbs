<div class="container">
    <h2 class="display-6"> Listado de drones</h2>
    <hr>


    <table class="table">
        <tbody>
            {{#each drones}}
            <tr>
                <td>
                    <p><strong>Este su nombre :</strong> {{name}} </p>

                    <p><strong>Su numero de helices son :</strong> {{propellers}} </p>

                    <p><strong>Su velocidad maxima:</strong> {{maxSpeed}}</p>

                </td>

                <td>

                    <form action="/drones/{{_id}}/delete/" method="POST">
                        <input type="submit" value="Eliminar" class="btn btn-danger">
                    </form>
                    <a href="/drones/{{_id}}/edit" class="btn btn-dark mt-3"> Actualizar</a>

                </td>



            </tr>

            {{/each}}

        </tbody>





    </table>
    <a href="/drones/create" class="btn btn-dark"> Crear Drone</a>
    <a href="/" class="btn btn-dark"> Ir al inicio</a>






</div>