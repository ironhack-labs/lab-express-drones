<div class="drones-list-header"> 
<h2>Available drones</h2>

<div class="create-btn">
  <a href="/drones/create">Create New Drone</a>
</div>
</div>

<div class="row">
  {{#each drones}}
    <div class="col-md-4">
      <div class="card">
        <img
          src="https://media.wired.com/photos/59264bb5f3e2356fd8008c6e/master/pass/DroneHP_GettyImages-599365398.jpg"
        />
        <div class="card-body d-flex align-items-center">
          <h3 class="card-title">{{name}}</h3>
          <h5 class="card-title">Propellers: {{propellers}}</h5>
          <h5 class="card-title">Max Speed: {{maxSpeed}}</h5>
          <div class="card-btns">
          <div class="edit-btn">
            <a href="/drones/{{_id}}/edit">Edit</a>
          </div>
          <div >
            <form action="/drones/{{_id}}/delete" method="POST">
              <button class="delete-btn" type="submit" onclick="alertFunction()">Delete</button>
            </form>
          </div>
          </div>


        </div>
      </div>
    </div>
  {{/each}}
</div>

