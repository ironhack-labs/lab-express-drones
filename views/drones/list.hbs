<section class="background">

<h2>Available drones</h2>

{{#each drones}}

<div class="about">
    <h3>{{name}}</h3>
    <p>Number of propellers: {{propellers}}</p>
    <p>Maximum speed: {{maxSpeed}}</p>
</div>

<div class="buttons-flex">
<div>
    <a class="button-edit" href="/drones/{{_id}}/edit">Edit Drone</a>
</div>
<div>
    <form action="/drones/{{_id}}/delete" method="post">
        <button class="button-delete" type="submit">Delete Drone</button>
    </form>
</div>

</div>

{{/each}}

<a class="create-drone" href="/drones/create">Create Drone</a>

</section>