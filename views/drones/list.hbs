<h2>Available drones</h2>
<div id="drones-list">
    {{#each drones as |drone|}}
        <div class="drone">
            <h1>{{drone.name}}</h1>
            <p>Propellers: {{drone.propellers}}</p>
            <p>Max Speed: {{drone.maxSpeed}}</p>
            <a href="/drones/{{drone._id}}/edit">Edit</a>
            <form action="/drones/{{drone._id}}/delete" method="POST">
                <button type="submit">Delete</button>
            </form>
        </div>
{{/each}}
</div>