<div class="container">
    <h2 class="mt-5 mb-3">Available drones</h2>

    <div class="row">
        {{#each drones}}
        <div class="col-md-6 mb-4">
            <div class="card bg-warning text-black">
                <div class="card-body">
                    <h5 class="card-title">Model: {{name}}</h5>
                    <p class="card-text">Propellers: {{propellers}}</p>
                    <p class="card-text">Maximum Speed: {{maxSpeed}} Km/h</p>
                    <a href="/drones/{{_id}}/edit" class="btn btn-dark mb-2">Update</a>
                    <form action="/drones/{{_id}}/delete" method="POST">
                        <input type="submit" value="Delete" class="btn btn-dark">
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <a href="/drones/create-form" class="btn btn-dark mt-4">Add a new drone</a>
</div>