<h2>Available drones</h2>
<a href="/drones/create">Want to Create Your Dream Drone ?</a>

{{#each drones}}
<h3>{{this.name}}</h3>
<p>Number of propellers: {{this.propellers}}</p>
<p>Speed: {{this.maxSpeed}}</p>
<a href="/drones/{{this.id}}/edit">Update Your Drone</a>
<form method="post" action="/drones/{{this.id}}/delete">
<button class="btn">Destroy !</button>
</form>
{{/each}}