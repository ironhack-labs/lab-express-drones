<h2>Available drones</h2>

<ul>
{{#each data}}
	<li>
		<h2>Name: {{this.name}}</h2>
        <h2>Propellers: {{this.propellers}}</h2>
        <h2>Speed:  {{this.maxSpeed}}</h2>
        <a href="/drones/{{this._id}}/edit">
			Editar
		</a>

        <form method="POST" action="/drones/{{this._id}}/delete">
<button>Borrar</button>
        </form>

	</li>
{{/each}}
        <button type="button" onclick="window.location.href='/drones/create';">Let's create a drone!!!</button>
</ul>