<body>

    <div class="container">
        <div class="title">
            <h2>Available drones</h2>
        </div>

        <div class="drone-container">
            {{#each drones}}
            <h3>Name: {{name}}</h3>
            <h3>Propellers: {{propellers}}</h3>
            <h3>Speed: {{maxSpeed}}</h3>
            <a href="/drones/{{_id}}/edit" class="btn btn-primary">Update drone</a>
            <form action="/drones/{{_id}}/delete" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
            {{/each}}
        </div>
    </div>

</body>