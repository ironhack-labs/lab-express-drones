<h2>Available drones</h2>


{{#each drone}}

<section class="drones-list">
<br>
    <h2>Name: {{this.name}}</h2>
    <h3>Number of propellers: {{this.propellers}}</h3>
    <h3>Maximun Speed: {{this.maxSpeed}}</h3>

    <a href="/drones/{{this.id}}/edit">Edit</a>

     <form action="/drones/{{this.id}}/delete" method="POST"><button>Delete</button></form>
<hr />
<br>
</section>

{{/each}}

