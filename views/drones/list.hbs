<section id="drone-list">
  <h2>Available drones</h2>
  <div>
    {{#each droneInDB}}
    <div>
      <p><b>Name: </b>{{name}}</p>
      <p><b>Propellers: </b>{{propellers}}</p>
      <p><b>Speed (m/s):</b>{{maxSpeed}}</p>
      
      <form action="/drones/{{_id}}/edit" method="get">
        <button type="submit">Edit</button>
      </form>
      
      <form action="/drones/{{_id}}/delete" method="post">
        <button type="submit">Delete</button>
      </form>
    </div>
    {{/each}}
  </div>

  <a href="/">Back</a>
</section>