<div class="mt-3 mb-3">
    <h2>Available drones</h2>
    <hr>

</div>

<div class="container">
    <div class="row justify-content-center ">
        {{#each data}}
        <div class="col-md-4 mb-3">
            <hr>
            <h4>{{name}}</h4>
            <p>propellers: {{propellers}}</p>
            <p>speed: {{maxSpeed}}</p>
            <a class="btn btn-dark mb-3" href="/drones/{{_id}}/edit">Edit</a>

            <form action="/drones/{{_id}}/delete" method="POST">
                <input type="submit" value="delete" class="btn btn-danger">
            </form>

        </div>
        {{/each}}
    </div>
</div>