<h2>Available drones</h2>

<div>
    {{#each drones}}
        <p>Name: {{ this.name }}</p>
        <p>Propellors: {{ this.propellers }}</p>
        <p>Max Speed: {{ this.maxSpeed }}</p>
        <a href="/drones/{{ this._id }}/edit"><button>Edit</button></a>
        <form action="/drones/{{ this._id }}/delete" method="post">
            <button>Delete</button>
        </form>
        <hr>
    {{/each}}
    <br>
</div>