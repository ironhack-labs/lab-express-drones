<h2>Available drones</h2>
<ul class="list">
  {{#each drones}}
    <div class="drones">
        <div>
      <li>
        <h3>Name: {{name}}</h3>
        <p>Propellers: {{propellers}}</p>
        <p>Max Speed: {{maxSpeed}}</p>
        </div>
        <div class="buttons">
            <div>
          <a class="button" href="/drones/{{_id}}/edit">Edit</a>
        </div>
        <div>
          <form action="/drones/{{this._id}}/delete" method="post">
            <button id="submit" type="submit">Delete</button>
          </form>
        </div>
        </div>
      </li>
    </div>
  {{/each}}
</ul>