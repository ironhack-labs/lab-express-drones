<h2>Available drones</h2>

<div class="container">

    <div class="row">

        {{#each dronesList}}

        <div class="col-sm-4 mb-4 mb-sm-0  col-4">
            <div class="card gap-1">
                <div class="card-body text-bg-light ">
                    <ul class="list-group list-group-flush">
                        <h5 class="card-title">{{name}} </h5>
                        <p class="list-group-item">Propellers {{propellers}} </p>
                        <p class="list-group-item">Max Speed {{maxSpeed}}</p>
                        <div class="d-flex gap-2">
                            <a href="/drones/{{_id}}/edit">Edit</a>
                            <form action="/drones/{{_id}}/delete" method="POST">
                                <input type="submit" value="Delete">
                            </form>
                        </div>

                    </ul>
                </div>
            </div>
        </div>

        {{/each}}

    </div>

</div>