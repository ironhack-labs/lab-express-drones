<h2>Available drones</h2>
{{#each drone}}
<div>
    <span>Name : {{name}} </span>
</div>
<div>
    <span>Propellers:{{propellers}} </span>
</div>
<div>
    <span>Speed:{{maxSpeed}} </span>
</div>
<div>
<a href="/drones/{{_id}}/edit">Edit Drone</a>
</div>
<div>
   <form action="/drones/{{_id}}/delete" method="POST">
     <button type="submit">Delete</button>
    </form>
</div>
<hr>

{{/each}}

