<div class="container">
  <h2 class="pt-3">Available drones</h2>

    <div class="row text-center pb-3">
        {{#each drones}}
            <div class="col-sm-6 p-2">
                <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{propellers}} propellers</p>
                    <p class="card-text">Max speed: {{maxSpeed}}</p>
                    <a href="#" class="btn btn-dark">More info</a>
                </div>
                </div>
            </div>
    {{/each}}
    </div>
</div>
