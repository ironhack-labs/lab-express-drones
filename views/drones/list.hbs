<h2>Available drones</h2>

<div>
    {{#each drones as |drone|}}
    <div>
        <h3>{{drone.name}}</h3>
        <p>Propellers: {{drone.propellers}}</p>
        <p>Max Speed: {{drone.maxSpeed}}</p>
    </div>
    <div>
        <a href="/drones/{{drone.id}}/edit">Edit Info</a>
    </div>
    <div>
        <form action="/drones/{{drone.id}}/delete" method="POST">
            <button>Delete Drone</button>
        </form>
    </div>
    {{/each}}
</div>