<h2>Available drones</h2>

{{#each drones}}
    <section class="drone-summary">
        <p>
            Name: {{name}} <br />
            Propellers: {{propellers}} <br />
            Max. Speed: {{maxSpeed}} m/s <br />
            <a href="/drones/{{_id}}/edit">Edit</a>
        </p>

        <form action="/drones/{{_id}}/delete" method="POST">
            <button>Delete</button>
        </form>

    </section>
{{/each}}