<h2>Available drones</h2>
<div>
{{#each drone}}
<h3>Name: {{name}}</h3>
<p>Propellers: {{propellers}}</p>
<p>Max speed: {{maxSpeed}}</p>

<a href="/drones/{{_id}}/edit">Edit drone</a>

<form action="/drones/{{_id}}/delete" method="POST">
    <button type="submit">Delete drone</button>
</form>
     
{{/each}}
</div>
