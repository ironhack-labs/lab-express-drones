<h2>Available drones</h2>

<div class="drones-wrapper">
  {{#each drones}}
    <div class="drone-div">
      <h3>{{this.name}}</h3>
      <p>Propellers: {{this.propellers}}</p>
      <p>Max speed: {{this.maxSpeed}}</p>
      <a href="/drones/{{this.id}}/edit">Edit</a>
      <form action="/drones/{{this.id}}/delete" method="POST">
        <button>Delete</button>
      </form>
    </div>
  {{/each}}
</div>