<div class="text-center">
    <h2 class="mt-3">Available drones</h2>
</div>

<div class="row justify-content-center">

    {{#each drones}}
    <div class="col-md-4 mb-4 mt-4">
        <div class="card text-bg-success" style="max-width: 18rem;">
            <div class="card-header">DRON</div>
            <div class="card-body">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">Propellers: {{propellers}}</p>
                <p class="card-text">MaxSpeed: {{maxSpeed}}</p>


                <a href="/drones/{{_id}}/edit" class="btn btn-warning">Edit</a>

                <form action="/drones/{{_id}}/delete" method="post">
                    <input type="submit" value="eliminar" class="btn btn-danger btn-sm">
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>