<h2>Available drones</h2>

<div class="flex">
    {{#each data}}
    <div class="drone">
        <h3>{{this.name}}</h3>
        <p>Propellers: {{this.propellers}}</p>
        <p>Max Speed: {{this.maxSpeed}}</p>
        <a href='/drones/{{this._id}}/edit'>Edit Info.</a>
        <form class="delete-btn" method="post" action="/drones/{{this._id}}/delete">
            <button >Delete Drone</button>
        </form>
     </div>
    {{/each}}
</div>