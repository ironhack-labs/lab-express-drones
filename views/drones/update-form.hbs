<div class="body form">
  <h2>Update the drone</h2>
  <form method="post" action="/drones/{{drone._id}}/edit">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{drone.name}}">
    <label for="propellers">Number of propellers</label>
    <input type="number" name="propellers" id="propellers" value="{{drone.propellers}}">
    <label for="speed">Maximum speed</label>
    <input type="number" name="maxSpeed" id="speed" value="{{drone.maxSpeed}}">
    <button id="update-btn">Update drone</button>
  </form>
</div>
