<div class="mt-3 mb-3">

    <h2>Update the drone</h2>
    <hr>

</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/drones/{{_id}}/edit" method="post">
                <div class="mb-3">
                    <label for="droneName" class="form-label">Drone name</label>
                    <input type="text" class="form-control" id="droneName" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="dronePropellers" class="form-label">Number of propellers</label>
                    <input type="number" class="form-control" id="dronePropellers" name="propellers"
                        value="{{propellers}}">
                </div>
                <div class="mb-3">
                    <label for="droneSpeed" class="form-label">Speed</label>
                    <input type="number" class="form-control" id="droneSpeed" name="maxSpeed" value="{{maxSpeed}}">
                </div>
                <button type="submit" class="btn btn-dark">Update!</button>
            </form>
        </div>
    </div>
</div>