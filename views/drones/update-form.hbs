<h2>Update the drone</h2>

<form method="post" action="/drones/{{drone._id}}/edit" class="form">
    <label for="name">name</label>
    <input id="name" class="input" type="text" name="name" value="{{drone.name}}">

    <label for="propellers">propellers</label>
    <input id="propellers" class="input" type="propellers" name="propellers" value="{{drone.propellers}}">

    <label for="maxSpeed">max speed</label>
    <input id="maxSpeed" class="input" type="maxSpeed" name="maxSpeed" value="{{drone.maxSpeed}}">

    <button type="submit">good for me</button>
</form>