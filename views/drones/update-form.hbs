<h2>Update the drone: {{this.name}}</h2>

<form action="/drones/{{this._id}}/edit" method="post">
    <label> Name:
        <input type="text" name="name" value="{{this.name}}" />
    </label>

    <label> Propellers:
        <input type="number" name="propellers" value="{{this.propellers}}" />
    </label>
   
    <label> Speed:
        <input type="number" name="maxSpeed" min="0" value="{{this.maxSpeed}}" />
    </label>

    <button>Save changes</button>
</form>