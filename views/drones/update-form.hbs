<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Update the drone</h1>

            <hr>

            <form action="/libros/editar/{{_id}}" method="POST">
                <div class="mb-3">
                    <label for="nam" class="form-label">Name</label>
                    <input type="text" class="form-control" id="nam" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="prop" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="prop" name="propeller" value="{{propeller}}">
                </div>

                <div class="mb-3">
                    <label for="speed" class="form-label">Speed</label>
                    <input type="text" class="form-control" id="speed" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">EDIT DRONE</button>
                </div>
            </form>

        </div>
    </div>
</div>