<h2>Update drone: {{this.drone.name}}</h2>

<form action="/drones/{{this.drone._id}}/edit" method="post">
	<label>
		Name:
		<input type="text" name="name" value="{{drone.name}}" />
	</label>

	<label>
		Propellers:
		<input type="number" name="propellers" value="{{drone.propellers}}" />
	</label>

	<label>
		Speed:
		<input type="number" name="maxSpeed" value="{{drone.maxSpeed}}" />
	</label>

	<button type="submit">Save</button>
</form>