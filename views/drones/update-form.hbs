<a class="btn btn-info mb-4" href="/drones">Back to list of drones</a>

<h2>Update this drone</h2>

<form method="post" action="/drones/{{drone._id}}/edit">
    <div class="form-group">
        <label for="">Name:</label>
        <input name="name" class="form-control" type="text" value="{{drone.name}}">
    </div>
    <div class="form-group">
        <label for="">Propellers:</label>
        <input name="propellers" class="form-control" type="number" value="{{drone.propellers}}">
    </div>
    <div class="form-group">
        <label for="">Maximum Speed:</label>
        <input name="maxSpeed" class="form-control" type="number" value="{{drone.maxSpeed}}">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>