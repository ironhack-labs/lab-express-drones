<h2>Update the drone</h2>
<form action='/drones/{{drone.id}}/edit' method='post'>
  <div>
    <label for='name'>Name</label>
    <input type='text' name='name' id='name' value='{{drone.name}}' />
  </div>
  <div>
    <label for='propellers'>Number of propellers</label>
    <input
      type='number'
      name='propellers'
      id='propellers'
      value='{{drone.propellers}}'
    />
  </div>
  <div>
    <label for='maxSpeed'>Max Speed in KM/H</label>
    <input
      type='number'
      name='maxSpeed'
      id='maxSpeed'
      value='{{drone.maxSpeed}}'
    />
  </div>
  <input type='submit' value='Update' />
</form>