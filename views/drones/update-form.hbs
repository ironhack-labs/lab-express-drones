<h2 class="text-center mb-3">Update the drone: {{name}}</h2>

<div class="bg-light p-5">
<form action="/drones/{{id}}/edit" method="post">
    <label for="drone-name">Drone name:</label>
    <input type="text" name="name" id="drone-name" placeholder="{{name}}" required>
    <br>
    <label for="propellers">Number of propellers</label>
    <input type="number" name="propellers" id="propellers" min="1" max="10" value="propellers" placeholder="{{propellers}}" required>
    <br>
    <label for="maxSpeed">Max Speed:</label>
    <input type="number" name="maxSpeed" id="maxSpeed" min="10" max="50" value="maxSpeed" placeholder="{{maxSpeed}}" required>  
    <br>
    <button class="btn btn-success"type="submit">Save Changes</button>
</form>
</div>
