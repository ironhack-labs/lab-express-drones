<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Update the drone</h2>
            <form action="/drones/{{_id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Drone name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Number of propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Maximum speed</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed" value={{maxSpeed}}>
                </div>
                <button type="submit" class="btn btn-dark">Update drone</button>
            </form>
        </div>
    </div>
    <a class="btn btn-secondary" href="/">Main page</a>
</div>