<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>EDIT {{name}}</h1>

            <hr>
             

            <form action="/drones/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">NAME</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">PROPELLERS</label>
                    <input type="text" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">MAX SPEED</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
                </div>
              
                <button type="submit" class="btn btn-dark">SAVE EDIT</button>
               
            </form>


            <hr>


        </div>
    </div>


</div>