<h2>Update the drone</h2>

<form action= "/drones/{{id}}/edit" method="post" class="row g-3">
  <div class="col-md-12">
    <label for="droneName" class="form-label">Name</label>
    <input type="text" class="form-control" name="name" value="{{name}}">
  </div>
  <div class="col-md-6">
    <label for="maxSpeed" class="form-label">Max Speed</label>
    <input type="number"  value={{maxSpeed}} class="form-control" name="maxSpeed">
  </div>
  <div class="col-md-6">
    <label for="propellers" class="form-label">Propellers</label>
    <input type="number" value={{propellers}} class="form-control" name="propellers">
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Send</button>
  </div>
</form>