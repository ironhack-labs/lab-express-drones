<h2>Update the drone</h2>

<form action="/drones/{{drone.id}}/edit" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" class="form-control" id="name" name="name" value="{{drone.name}}">
  </div>
  <div class="mb-3">
    <label for="propellers" class="form-label">Propellers</label>
    <input type="text" class="form-control" id="propellers" name="propellers" value="{{drone.propellers}}">
  </div>
  <div class="mb-3">
    <label for="maxSpeed" class="form-label">Max speed</label>
    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed" value="{{drone.maxSpeed}}">
  </div>
  <button type="submit" class="btn btn-primary">Edit</button>
</form>