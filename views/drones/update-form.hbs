<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-gd-6 col-sd-3">
            <h2>Update the drone: {{name}}</h2>
            <hr>
            <form action="/drones/{{_id}}/edit" method="POST">
                <div class="mb-3 mt-5">
                    <label for="dronName" class="from-label">Name</label>
                    <input type="text" class="form-control" id="dronName" name="name" value={{name}}>
                </div>
                <div class="mb-3 mt-5">
                    <label for="dronPropellers" class="from-label">Propellers</label>
                    <input type="number" class="form-control" id="dronPropellers" name="propellers"
                        value={{propellers}}>
                </div>
                <div class="mb-3 mt-5">
                    <label for="dronMaxSpeed" class="from-label">Maximun Speed</label>
                    <input type="number" class="form-control" id="dronMaxSpeed" name="maxSpeed" value={{maxSpeed}}>
                </div>
                <button type="submit" class="btn btn-dark">Guardar Edici√≥n</button>
            </form>
        </div>
    </div>
</div>