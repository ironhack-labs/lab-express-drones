<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Editar el dron {{title}}</h1>

            <form action="/drones/{{_id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="title" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Nº de Hélices</label>
                    <input type="text" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Velocidad Máxima</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Editar dron</button>
                </div>

            </form>

            <hr>
        </div>
    </div>



    <a href="/" class="btn btn-dark">Volver al inicio</a>
</div>