<div class="container">
    <h2>Edita el drone {{name}}</h2>
    <hr>
    <div class="row justify-content-center">
        <div class="col-md-6">

            <form action="/drones/{{id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="propellers" class="form-label">Hélice</label>
                    <input type="text" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
                </div>

                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Velocidad máxima</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Editar dron</button>
                </div>

            </form>
        </div>
    </div>
</div>