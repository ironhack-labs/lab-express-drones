<h2>Update the drone</h2>

<form method="POST" action="/drones/{{this_id}}/edit">
  <label>
    Name:
    <input type="text" name="name" value="{{drone.name}}" /></label>

  <label>Propellers:
    <input type="number" name="propellers" value="{{drone.propellers}}" />
  </label>
  <label>
    Speed:
    <input type="number" name="maxSpeed" value="{{drone.maxSpeed}}" />
  </label>
  <button type="submit"> Update </button>
</form>