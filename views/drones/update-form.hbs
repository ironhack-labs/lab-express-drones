<div class='bg-update'>
  <div class='navbar'>
    <a href='/'>Home</a>
    <a href='/drones'>All Drones</a>
    <a href='/drones/create'>Create New</a>
  </div>
  <div class='container'>
    <h2>Update the drone: {{drone.name}}</h2>
    <div class='form-wrapper'>
      <form action='/drones/{{drone._id}}/edit' method='post'>
        <div>
          <label>
            Name:
            <input type='text' name='name' value='{{drone.name}}' />
          </label>
        </div>
        <div>
          <label>
            Propellers:
            <input
              type='number'
              name='propellers'
              value='{{drone.propellers}}'
            />
          </label>
        </div>
        <div>
          <label>
            MaxSpeed:
            <input type='number' name='maxSpeed' value='{{drone.maxSpeed}}' />
          </label>
        </div>
        <button class='button' type='submit'>Save changes</button>
      </form>
    </div>
  </div>
</div>