<section id="update-container">
    <h2>Update the drone</h2>
    <form action="/drones/{{drone._id}}/edit" method="post">
        <label> Name:
            <input type="text" name="name" required value="{{drone.name}}"/>
        </label>
        <label> Propellers:
            <input type="number" name="propellers" required value="{{drone.propellers}}"/>
        </label>
        <label> Max-speed:
            <input type="number" name="maxSpeed" required value="{{drone.maxSpeed}}"/>
        </label>
        <button type="submit">Update</button>
    </form>
    <br>
</section>
