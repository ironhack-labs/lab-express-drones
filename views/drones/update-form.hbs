<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Editar {{name}}</h1>

            <hr>

            <form action="/drones/{{_id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="prop" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="prop" name="propellers" value="{{propellers}}">
                </div>

                <div class="mb-3">
                    <label for="speed" class="form-label">Max speed</label>
                    <input type="text" class="form-control" id="speed" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Edit Drone</button>
                </div>
            </form>

        </div>
    </div>
</div>