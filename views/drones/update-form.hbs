<h2>Edit the drone: {{name}}</h2>

<form action="/drones/{{_id}}/edit" method="post">

  <label for="name-input">Name:</label>
  <input type="text" name="name" id="name-input" value="{{name}}" />

  <label for="propellers-input">Propellers:</label>
  <input type="number" name="propellers" id="propellers-input" value="{{propellers}}" />

  <label for="maxSpeed-input">Max Speed:</label>
  <input type="number" name="maxSpeed" id="maxSpeed-input" value="{{maxSpeed}}" />

  <button type="submit">Save changes</button>

</form>