<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>Edit Drone</h2>

            <form action='/drones/{{id}}/edit' method="POST">

                <div class="mb-3" class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="number" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Max Speed</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                <button type="submit" value="edit" class="btn btn-light">Edit</button>
            </form>

            <hr>
        </div>
    </div>



    <a href="/drones" class="btn btn-light">Back to the list</a>
</div>