<h2>Update the drone</h2>

<form action="/drones/{{id}}/edit" method="post">
    <div class="mb-3">
        <label for="name" class="form-label">Name:</label>
        <input type="text" class="form-control" id="name" value="{{name}}" name="name">
    </div>
    <div class="mb-3">
        <label for="propell" class="form-label">Propellers:</label>
        <input type="text" class="form-control" id="propell" value="{{propellers}}" name="propellers">
    </div>
    <div class="mb-3">
        <label for="speed" class="form-label">Max Speed:</label>
        <input type="text" class="form-control" id="speed" value="{{maxSpeed}}" name="maxSpeed">
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>