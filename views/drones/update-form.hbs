<h2>Update the drone</h2>
<form action="/drones/{{id}}/edit" method="POST">
    <label>
        Nombre
        <input type="text" name="name" value="{{name}}">
    </label>
    <br><br>
    <label>
        Propellers
        <input type="text" name="propellers" value="{{propellers}}">
    </label>
    <br><br>
    <label>
        MaxSpeed
        <input type="number" name="maxSpeed" value="{{maxSpeed}}">
    </label>
    <button type="submit"> listo</button>
</form>
