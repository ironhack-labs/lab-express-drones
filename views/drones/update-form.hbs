
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Edit Drone</h1>
            <hr>
            <form action="/drones/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input required type="text" class="form-control" id="title" name="name" value="{{name}}">
                </div>
                 <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="description" name="propellers" value="{{propellers}}">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Max Speed</label>
                    <input type="text" class="form-control" id="name" name="maxSpeed" value="{{maxSpeed}}">
                </div>
               
                <button type="submit" class="btn btn-dark">Update Drone</button>
                <a href="/" class="btn btn-dark">Go back</a>
            </form>
            <hr>
        </div>
    </div>
</div>