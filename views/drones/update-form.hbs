<h2>Update the drone</h2>

<form action="/drones/{{id}}/edit" method="POST">

    <form action="/drones/create" method="POST">

        <label>
            <input type="text" name="name" value="{{name}}">
        </label>

        <label>
            <input type="text" name="propeller" value="{{propellers}}">
        </label>

        <label>
            <input type="text" name="maxSpeed" value="{{maxSpeed}}">
        </label>

        <input type="submit" value="Update drone">


    </form>


</form>