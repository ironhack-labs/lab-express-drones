<h2>Update the drones</h2>

<form action="/drones/{{_id}}/edit" method="POST">
    <div class="mb-3">
       
        <label for="formGroupExampleInput" class="form-label">Name</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="name" value="{{name}}">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Propellers</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" name="maxSpeed" value="{{propellers}}">
    </div>
    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Max Speed</label>
        <input type="text" class="form-control" id="formGroupExampleInput2" name="propellers" value="{{maxSpeed}}">
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-dark">Crear dron</button>
    </div>

</form>