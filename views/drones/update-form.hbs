<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>Edit {{name}}</h2>

            <hr>

            <form action="/drones/{{id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="props" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="props" name="propellers" value="{{propellers}}">
                </div>

                <div class="mb-3">
                    <label for="speed" class="form-label">Maximum speed</label>
                    <input type="text" class="form-control" id="speed" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Update drone</button>
                </div>
            </form>

        </div>
    </div>
</div>