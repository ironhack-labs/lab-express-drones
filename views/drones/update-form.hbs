<h2>Update drone</h2>

<form action="/drones/{{droneToUpdate.id}}/edit" method="POST">
        <div>
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{droneToUpdate.name}}" required>
            <label for="propellers">Propellers</label>
            <input type="number" id="propellers" name="propellers" value="{{droneToUpdate.propellers}}" required>
            <label for="maxSpeed">Max speed</label>
            <input type="number" id="maxSpeed" name="maxSpeed" value="{{droneToUpdate.maxSpeed}}" required>
        </div>
        <div class="submit-btn">
            <button type="submit" id="btn5">Submit</button>
        </div>
</form>