<h2>Update the {{name}}</h2>

<form action="/drones/{{_id}}/edit" method="post">

    <div class="mb-3">
        <label for="title" class="form-label">Name</label>
        <input type="text" class="form-control" id="title" name="name" value="{{name}}">
    </div>

    <div class="mb-3">
        <label for="title" class="form-label">Propellers</label>
        <input type="text" class="form-control" id="title" name="propellers" value="{{propellers}}">
    </div>

    <div class="mb-3">
        <label for="title" class="form-label">Maximum Speed</label>
        <input type="text" class="form-control" id="title" name="maxSpeed" value="{{maxSpeed}}">
    </div>
    <div class="d-grid">
        <button type="submit" class="btn btn-dark"> Send </button>
    </div>

</form>