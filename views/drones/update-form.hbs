<h2>Update the drone</h2>

<form action="/drones/{{response._id}}/edit" method="POST">
    <label for="name">The Model: </label>
    <input type="text" name="name" id="name" value="{{response.name}}">

    <label for="numPropell">Number of propellers: </label>
    <input type="number" name="propellers"  id="numPropell" min="1" value="{{response.propellers}}">

    <label for="maxSpeed">Maximum Speed: </label>
    <input type="number" name="maxSpeed" id="maxSpeed" min="1" value="{{response.maxSpeed}}">

    <button type="submit">SAVE</button>
</form> 