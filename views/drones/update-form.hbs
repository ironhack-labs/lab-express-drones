<h2>Update the drone</h2>
<form action="" method="post">
    {{#with drone}}
    <label for="name">Name: </label>
    <input type="text" id="name" name="name" value="{{name}}">
    <label for="propellers">Propellers: </label>
    <input type="number" id="propellers" name="propellers" value="{{propellers}}">
    <label for="maxSpeed">Propellers: </label>
    <input type="number" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
    <input type="submit" value="Submit">
    {{/with}}
</form>
<h2 {{error}}>Error while updating a drone</h2>