<h2>Update our drones</h2>

<div>
  <form action="/drones/{{_id}}/edit" method="post">

    <label for="name">Name: </label>
    <input type="text" name="name" id="name" placeholder="Input drone name" value="{{name}}"/>

    <br />

    <label for="propellers">Propellers: </label>
    <input
      type="number"
      name="propellers"
      propellers="propellers"
      id="propellers"
      placeholder="Input number of propellers" value="{{propellers}}"
    />

    <br />

    <label for="maxSpeed">MaxSpeed: </label>
    <input
      type="number"
      name="maxSpeed"
      maxSpeed="maxSpeed"
      id="maxSpeed"
      placeholder="Input drone max speed" 
      value="{{maxSpeed}}"
    />

    <br />

    <button type="submit">Update drone model</button>

  </form>
</div>