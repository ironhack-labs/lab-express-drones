<div class="container forms">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <h1>Editing {{name}}</h1>

            <hr>

            <form action="/drones/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="field1" class="form-label">Name</label>
                    <input type="text" class="form-control" id="field1" name="title" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="field2" class="form-label">Propellers</label>
                    <input type="number" class="form-control" id="field2" name="propellers" value="{{propellers}}">
                </div>

                <div class="mb-3">
                    <label for="field3" class="form-label">Maximum Speed</label>
                    <input type="number" class="form-control" id="field2" name="maxSpeed" value="{{maxSpeed}}">
                </div>



                <input type="text" name="drone_id" hidden value="{{_id}}">

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Save update</button>
                </div>
                <div class="d-grid pt-2">
                    <a href="/drones/list" type="submit" class="btn btn-dark">Return to list</a>
                </div>
            </form>
        </div>
    </div>

</div>