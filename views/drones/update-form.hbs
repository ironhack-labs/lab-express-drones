<h2>Update the drone</h2>

<div class="form-container">
  <form action="/drones/{{drone._id}}/edit" method="POST">
    <div class="form-group">
      <label for="nameLabel">Name</label>
      <input type="text" name="name" class="form-control" id="nameLabel" value="{{drone.name}}">
    </div>
    <div class="form-group">
      <label for="propellersLabel">Propellers</label>
      <input type="number" name="propellers" class="form-control" id="propellersLabel" value="{{drone.propellers}}">
    </div>
    <div class="form-group">
      <label for="maxSpeedLabel">Speed</label>
      <input type="number" name="maxSpeed" class="form-control" id="maxSpeedLabel" value="{{drone.maxSpeed}}">
    </div>
    <button type="submit" class="btn btn-dark">Save</button>
  </form>