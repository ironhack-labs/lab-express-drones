<div class="container">
    <h2>Update the drone</h2>
    <div class="col-6">
        <div class="row">
            <form action="/drones/{{id}}/edit" method="post">
                <div class="row m-5">
                    <label for="">Name</label>
                    <input type="string" name="name" value="{{name}}">
                </div>
                <div class="row m-5">
                    <label for="">Propellers</label>
                    <input type="number" name="propellers" value="{{propellers}}">
                </div>
                <div class="row m-5">
                    <label for="">Max Speed</label>
                    <input type="number" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                {{!-- <input type=" text" name="user" value="{{_id}}">
                --}}
                <button class="m-5" type="submit">Update Drone</button>
            </form>
        </div>
    </div>
</div>