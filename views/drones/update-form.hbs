<h2>Update the drone</h2>
<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <h1>Editar {{name}}</h1>

            <hr>

            <form action="/drones/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="field1" class="form-label">Name</label>
                    <input type="text" class="form-control" id="field1" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="field2" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="field2" name="propellers" value="{{propellers}}">
                </div>

                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="field3" class="form-label">MaxSpeed
                            </label>
                            <input type="number" class="form-control" id="field3" name="maxSpeed" value="{{maxSpeed}}">
                        </div>
                    </div>


                    <input type="text" name="drones_id" hidden value="{{_id}}">

                    <div class="d-grid">
                        <button type="submit" class="btn btn-dark">Guardar edici√≥n</button>
                    </div>
            </form>
        </div>
    </div>

</div>