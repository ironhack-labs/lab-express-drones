<h2>Update the drone</h2>

<form action="/drones/create" method="POST">
    <div>
        <label> Name:
            <input type="text" name="name" value="{{name}}"/>
        </label>

        <label> Propellers:
            <input type="number" name="propellers" value = "{{propellers}}"/>
        </label>

        <label> Maximum speed:
            <input type="number" name="maxSpeed" min="0" value = "{{maxSpeed}}"/>
        </label>

    </div>

  <button type="submit"> Update </button>
</form>