<div class="container mt-5">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Edit Drone</h1>
            <hr>

            <form action="/drones/edit" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Speed</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" min="1"
                        value="{{maxSpeed}}">
                </div>

                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="number" class="form-control" id="propellers" name="propellers" min="1"
                        value="{{propellers}}">
                </div>

                <input type="hidden" name="drone_id" value="{{id}}">

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Save</button>
                </div>

            </form>
        </div>
    </div>
</div>