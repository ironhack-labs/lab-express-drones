<h2>Update the drone: {{name}}</h2>

<form action="/drones/{{_id}}/edit" method="post">

  <label for="name-input">Name:</label>
  <input type="text" name="name" id="name-input" value="{{name}}" />

  <label for="propellers-input">Number of propellers:</label>
  <input type="number" name="propellers" id="propellers-input" min="1" max="250" value="{{propellers}}" />

  <label for="maxSpeed-input">Top speed:</label>
  <input type="number" name="maxSpeed" id="maxSpeed-input" min="1" max="500" value="{{maxSpeed}}" />

  <button type="submit">Save changes</button>

</form>