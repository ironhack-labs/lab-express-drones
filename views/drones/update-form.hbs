<h2>Update the drone</h2>

<form method="POST" action="/drones/{{drone._id}}/edit" >
  <div class="form-group">
    <label for="droneName">Name</label>
    <input name="name" type="text" class="form-control" id="droneName" aria-describedby="emailHelp">
  </div>

  <div class="form-group">
    <label for="dronePropellers">Propellers </label>
    <input name="propellers " type="text" class="form-control" id="dronePropellers">
  </div>

  <div class="form-group">
    <label for="droneMaxSpeed">Max Speed</label>
    <input name="maxSpeed " type="text" class="form-control" id="droneMaxSpeed" aria-describedby="emailHelp">
  </div>

<button type="submit" class="btn btn-primary">Submit</button>