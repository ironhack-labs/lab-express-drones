<h2>Update drone</h2>

<form method="POST">
   <div>
        <label for="droneName" class="form-label">Drone name</label>
        <input type="text" class="form-control" id="droneName" name="name"value={{name}}>
   </div>
   <div class="mb-3">
        <label for="numberPropellers" class="form-label">Propellers</label>
        <input type="number" class="form-control" id="numberPropellers" name="propellers" value={{propellers}}>
   </div>
   <div>
        <label for="maxSpeed" class="form-label">Max Speed</label>
        <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" value={{maxSpeed}}>
   </div>
   <button type="submit" class="btn btn-primary">Add</button>
</form>