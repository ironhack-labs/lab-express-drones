<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-7">
			<h2>Update the drone</h2>
			<hr>
			<form action="/drones/{{id}}/edit" method="POST">
				<div class="mb-3">
					<label for="nameField" class="form-label">Name</label>
					<input type="text" class="form-control" id="nameField" name="name" value="{{name}}">
				</div>
				<div class="row">
					<div class="col-md-6">
						<div class="mb-3">
							<label for="propellersField" class="form-label">Propellers</label>
							<input type="number" class="form-control" id="propellersField" name="propellers"
								value="{{propellers}}">
						</div>
					</div>
					<div class=" col-md-6">
						<div class="mb-3">
							<label for="speedField" class="form-label">Speed</label>
							<input type="number" class="form-control" id="speedField" name="maxSpeed"
								value="{{maxSpeed}}">
						</div>
					</div>
					<div class=" row justify-content-center">
						<div class="d-grid col-md-6">
							<button type="submit" class="btn btn-dark">Update Drone</button>
						</div>
					</div>
				</div>
			</form>
		</div>
	</div>

</div>