<h2>Update the drone</h2>

<form method="post" action="/drones/{{drone.id}}/edit" class="form">
    <label for="name">Name</label>
    <input class="input" type="text" id="name" name="name" value={{drone.name}}>

    <label for="propellers">Propellers</label>
    <input class="input" type="text" name="propellers" id="propellers" value={{drone.propellers}}>

    <label for="maxSpeed">Speed</label>
    <input class="input" type="text" name="maxSpeed" id="maxSpeed" value={{drone.maxSpeed}}>

    <button type="submit" class="btn">Save changes</button>


</form> 