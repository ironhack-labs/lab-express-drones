<h2>Update the drone</h2>


<form action="/drones/{{_id}}/edit" method="POST">


    <label for="">name <input type="text" name="name" value="{{name}}"></label>
    <br>
    <label for="">propellers <input type="text" name="propellers" value="{{propellers}}"></label>
    <br>
    <label for="">maxSpeed <input type="text" name="maxSpeed" value="{{maxSpeed}}"></label>


    <input type="submit" value="Update Drone">




</form>