<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h2>Update the drone</h2>
            <hr>

            <form action="/drones/:id/edit" method="POST" class="form">
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers:</label>
                    <input type="number" class="form-control" id="propellers" name="propellers" value="{{propellers}}">
                </div>

                <div class="mb-3">
                    <label for="speed" class="form-label">Speed:</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Update drone</button>
                </div>

                <input type="hidden" name="drone_id" value="{{id}}">

            </form>
        </div>
    </div>
</div>