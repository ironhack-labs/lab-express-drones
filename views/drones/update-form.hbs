<h2>Update the drone</h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Edit {{title}}</h1>

            <hr>
            <form action="/drones/{{_id}}/edit" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name:</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="aut" class="form-label">propellers;</label>
                    <input type="text" class="form-control" id="aut" name="propellers" value="{{propellers}}">
                </div>

                <div class="mb-3">
                    <label for="desc" class="form-label">Max Speed:</label>
                    <input type="text" class="form-control" id="MaxSpeed" name="MaxSpeed" value="{{maxSpeed}}">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Edit</button>
                </div>
            </form>

        </div>
    </div>
</div>