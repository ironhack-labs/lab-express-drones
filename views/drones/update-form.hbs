<h2>Update the drone</h2>
<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">



            <form action='/drones/{{_id}}/edit' method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">name</label>
                    <input type="text" class="form-control" id="title" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Helices</label>
                    <input type="number" class="form-control" id="description" name="propellers" value="{{propellers}}">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">maxSpeed</label>
                    <input type="number" class="form-control" id="author" name="maxSpeed" value="{{maxSpeed}}">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Editar Dron</button>
                </div>
                <br>
                <br>
                <a href="/drones" class="btn btn-success">Volver a los Drones</a>
                <br>
            </form>
        </div>
        <br>
        <hr>

        <form action="/drones/{{_id}}/delete" method="POST">
            <input type="submit" value="Eliminar dron" class="btn btn-danger">
        </form>

        <a href="/" class="btn btn-success">Volver al Inicio</a>
    </div>