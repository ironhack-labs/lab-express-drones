<div class="container">


    <div class="row justify-content-center">

        <div class="col-md-6">
            <h2>Editar el Dron</h2>
            <hr>

            <form action="/drones/{{id}}/edit" method="GET">

                <div class="mb-6">
                    <label for="field1" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="field1" name="name" value="{{name}}">
                </div>
                <br>
                <div class="mb-6">
                    <label for="field2" class="form-label">Número de hélices</label>
                    <input type="text" class="form-control" id="field2" name="propellers" value="{{propellers}}">
                </div>
                <br>
                <div class="mb-6">
                    <label for="field3" class="form-label">Velocidad Máxima</label>
                    <input type="text" class="form-control" id="field3" name="maxSpeed" value="{{maxSpeed}}">
                </div>
                <br>
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Editar drone</button>
                </div>
            </form>
        </div>
    </div>
    <a href="/">Volver a Inicio</a>
</div>