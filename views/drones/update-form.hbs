<h2>Update the drone</h2>

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <form action="/drones/{{_id}}/edit" method="POST">

                <div class="mb-3">
                    <label for="field1" class="form-label">Name</label>
                    <input type="text" class="form-control" id="field1" name="name" value="{{name}}">
                </div>


                <div class="mb-3">

                    <label for="field2" class="form-label">Propeller</label>
                    <input type="text" class="form-control" id="field1" name="propellers" value="{{propellers}}">
                </div>

                <div class="mb-3">

                    <label for="field3" class="form-label">MaxSpeed</label>
                    <input type="text" class="form-control" id="field1" name="maxSpeed" value="{{maxSpeed}}">
                </div>


                <button type="submit" class="btn btn-dark">Save Edition</button>

            </form>