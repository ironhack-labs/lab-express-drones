<h2>Update the drone</h2>

<form method="POST" action="/drone/{{ drone._id }}/edit">
  <div class="mb-3">
    <label class="form-label" >Name</label>
    <input class="form-control" type="text" name="name" value="{{name.title}}">
    <br>
    <label class="form-label" >Propellers</label>
    <input class="form-control" type="text" name="propellers" value="{{drone.propellers}}">
    <br>
    <label class="form-label" >Max Speed</label>
    <input class="form-control" type="text" name="maxSpeed" value="{{drone.maxSpeed}}">
    <br>
    <button class="btn btn-primary" type="submit">SUBMIT</button>
  </div>
</form>