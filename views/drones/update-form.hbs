<div class="row justify-content-center text-center">
    <h2>Update drone</h2>
    <hr>

    <div class="col-5">
        <div class="card p-3">
            <form action="/drones/{{_id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="input1" class="form-label">Drone name</label>
                    <input type="text" class="form-control" id="input1" name="name" value="{{name}}">
                </div>
                <div class="row justify-content-center">
                    <div class="col-6">
                        <div class="mb-3">
                            <label for="input2" class="form-label">Propellers</label>
                            <input type="text" class="form-control" id="input2" name="propellers"
                                value="{{propellers}}">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="mb-3">
                            <label for="input3" class="form-label">Max Speed</label>
                            <input type="text" class="form-control" id="input3" name="maxSpeed" value="{{maxSpeed}}">
                        </div>
                    </div>
                </div>
                <div class="col-auto d-grid mt-3">
                    <button type="submit" class="btn btn-dark mb-3">Edit</button>
                </div>
            </form>
        </div>
    </div>

</div>