<h2>Update the drone:{{drone.name}}</h2>

<form action="/drones/{{drone._id}}/edit" method="post">
    <label>name:<input type="text" name="name" value="{{drone.name}}"/></label>
    <label>Propellers:<input type="number" name="propellers" value="{{drone.propellers}}"/></label>
    <label>Max Speed<input type="number" name="maxSpeed" min="1" max="20" value="{{drone.maxSpeed}}"/></label>

    <button type="submit">Create</button>
</form>