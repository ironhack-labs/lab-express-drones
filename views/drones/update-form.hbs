<h2>Update the drone: {{name}}</h2>

 
<form action="/drones/{{_id}}/edit" method="post">
 
  <label for="name-input">Name:</label>
  <input type="text" name="name" id="title-input" value="{{name}}" />
 
  <label for="propellers-input">Propellers:</label>
  <input type="number" name="propellers" id="propellers-input" value="{{propellers}}" />
 
  <label for="maxSpeed-input">Max.Speed:</label>
  <input type="number" name="maxSpeed" id="rate-input" min="1" max="1000" value="{{maxSpeed}}" />
 
  <button type="submit">Save changes</button>
 
</form>