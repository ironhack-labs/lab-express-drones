<div class="container">

    <div class="row">
        <div class="col-md-6">
            <h2>Create a new drone</h2>

            <hr>

            <form action="/drones/create" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">maxSpeed</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>

                <button class="btn btn-light" type="submit">Create new</button>
                <a href="/" class="btn btn-light">Home</a>
            </form>
        </div>
    </div>
</div>