<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Create a new drone</h2>
            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Drone name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Number of propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Drone's maximum speed</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>
                <button type="submit" class="btn btn-dark">Create drone</button>
            </form>
        </div>
    </div>
    <a class="btn btn-secondary d-flex-inline justify-content-center align-items-end" href="/">Main page</a>
</div>