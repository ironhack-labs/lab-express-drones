<div class="mt-3 mb-3">

    <h2>Create a new drone</h2>
    <hr>

</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/drones/create" method="post">
                <div class="mb-3">
                    <label for="droneName" class="form-label">Drone name</label>
                    <input type="text" class="form-control" id="droneName" name="name">
                </div>
                <div class="mb-3">
                    <label for="dronePropellers" class="form-label">Number of propellers</label>
                    <input type="number" class="form-control" id="dronePropellers" name="propellers">
                </div>
                <div class="mb-3">
                    <label for="droneSpeed" class="form-label">Speed</label>
                    <input type="number" class="form-control" id="droneSpeed" name="maxSpeed">
                </div>
                <button type="submit" class="btn btn-dark">Create!</button>
            </form>
        </div>
    </div>
</div>