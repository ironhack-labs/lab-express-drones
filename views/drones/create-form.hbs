<h2>Create a new drone</h2>

{{! use post method for creating }}
<form action="/drones/create" method="post">

  <label for="name">Name</label>
  <input type="text" name="name" id="name" />

  <label for="propellers">Propellers</label>
  <input type="number" name="propellers" id="propellers" />

  <label for="maxSpeed">Speed</label>
  <input type="number" name="maxSpeed" id="maxSpeed" />

  <button type="submit">Add drone</button>

</form>