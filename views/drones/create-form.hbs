<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title">Create a new drone</h2>
  </div>
  <div class="panel-body">
    <form class="form-horizontal" action="/drones/create" method="post">
        <div class="form-group">
        <label for="name-input" class="col-sm-2 control-label">Name:</label>
            <div class="col-sm-10">
                <input type="text" name="name" id="name-input" placeholder="Name of drone">
            </div>
        </div>
        <div class="form-group">
        <label for="propellers-input" class="col-sm-2 control-label">Number of propellers:</label>
            <div class="col-sm-10">
                <input type="number" name="propellers" id="propellers-input" min="1" max="150" placeholder="No. of propellers">
            </div>
        </div>
        <div class="form-group">
        <label for="maxSpeed-input" class="col-sm-2 control-label">Top Speed:</label>
            <div class="col-sm-10">
                <input type="number" name="maxSpeed" id="maxSpeed-input" min="1" max="500" placeholder="Maximum speed">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Create drone</button>
            </div>
        </div>
</form>
</div>
</div>
<a class="btn btn-info btn-sm" href="/drones" role="button">See the list of drones!</a>