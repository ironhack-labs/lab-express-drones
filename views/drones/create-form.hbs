<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Create a new drone</h2>
            <form action="/drones/create" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Dron name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="number" class="form-control" id="propellers" name="propellers">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Max Speed</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Create new dron</button>
                </div>
            </form>
        </div>
    </div>
</div>