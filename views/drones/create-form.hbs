<h2>Create a new drone</h2>

<form action="/drones/create" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input value="{{drone.name}}" type="text" class="form-control" id="name" name="name" required>
  </div>

  <div class="mb-3">
    <label for="propellers" class="form-label">Number of Propellers</label>
    <input value="{{drone.propellers}}" type="number" class="form-control" id="propellers" name="propellers" required>
  </div>

  <div class="mb-3">
    <label for="maxSpeed" class="form-label">Maximum Speed</label>
    <input value="{{drone.maxSpeed}}" type="text" class="form-control" id="maxSpeed" name="maxSpeed">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>