<div class="col">
    <div class="container">
        <div class="row">
            <h1 class="my-4">{{#if name}}Edit{{else}}Create a new{{/if}} drone</h1>
        </div>
        <div class="row">
            <form action="/drones{{#if name}}/{{_id}}/edit{{else}}/create{{/if}}" method="POST">
                <div class="form-group">
                    <label for="inputName">Name:</label>
                    <input type="text" class="form-control" name="name" value="{{name}}" id="inputName">
                </div>
                <div class="form-group">
                    <label for="propellers">Propellers</label>
                    <select class="form-control" name="propellers" id="propellers">
                        <option>4</option>
                        <option>6</option>
                        <option>8</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="maxSpeed">MaxSpeed</label>
                    <input type="number" class="form-control" name="maxSpeed" id="maxSpeed" value="{{maxSpeed}}">
                </div>
                <button type="submit" class="btn btn-primary">{{#if name}}Edit{{else}}Create{{/if}}</button>
            </form>
        </div>
    </div>
</div>