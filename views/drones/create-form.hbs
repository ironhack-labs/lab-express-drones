<h2>Create a new drone</h2>

<form action="/drones/create" method="POST">

<label for="name">Drone Name</label>
<input type="text" name="name" id="name">

<label for="propellers">Propellers</label>
<input type="string" name="propellers" id="propellers">

<label for="maxSpeed">Max Speed</label>
<input type="number" name="maxSpeed" id="maxSpeed">

<label for="takeoffWeight">Takeoff Weight</label>
<input type="number" name="takeoffWeight" id="takeoffWeight">

<label for="maxFlightTime">Max Flight Time</label>
<input type="number" name="maxFlightTime" id="maxFlightTime">

<label for="diagonalLength">Diagonal Length</label>
<input type="number" name="diagonalLength" id="diagonalLength">

<label for="img">Image URL</label>
<input type="string" name="img" id="img">
<button type="submit">Create</button>

</form>

