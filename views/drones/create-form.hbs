
<div class="col">
	<div class="row">
        <h2>Create a new drone</h2>
	</div>
	<div class="row">
		<form action="/drones/create" method="POST">
			<div class="form-group">
				<label for="name">Drone name: </label>
				<input class="form-control" type="text" id="name" name="name" value="{{name}}">
			</div>
			<div class="form-group">
				<label for="propeller">Number of propellers:</label>
				<input class="form-control" type="text" id="propeller" name="propeller">
			</div>
			<div class="form-group">
				<label for="maxSpeed">Maximum speed: </label>
				<input class="form-control" type="text" id="maxSpeed" name="maxSpeed">
			</div>
			<button type="submit" class="btn btn-primary">Confirm</button>
		</form>
	</div>
</div>