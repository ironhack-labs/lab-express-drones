<body id="create">
  {{>nav}}
  <div class="container-fluid ">
    <div class="row justify-content-center align-items-center">
      <div class="col-4 block">
        <h2>Create a new drone</h2>

        <div class="form">
          <form action="/drones/create" method="POST">
            <div class="row justify-content-between">
              <div class="form-group col-12">
                <label for="nameLabel">Name</label>
                <input type="text" name="name" class="form-control" id="nameLabel">
              </div>
              <div class="form-group col-6">
                <label for="propellersLabel">Propellers</label>
                <input type="number" name="propellers" class="form-control" id="propellersLabel">
              </div>
              <div class="form-group col-6">
                <label for="maxSpeedLabel">Speed</label>
                <input type="number" name="maxSpeed" class="form-control" id="maxSpeedLabel">
              </div>
              <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-dark">Create</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    {{>footer}}
</body>