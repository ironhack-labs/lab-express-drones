
<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>WOW!!!  NEW DRONE</h1>

            <hr>

            <form action="/drones/create" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">NAME</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">PROPELLERS</label>
                    <input type="number" class="form-control" id="propellers" name="propellers">
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">MAX SPEED</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>
                

                <button type="submit" class="btn btn-dark">CREATE NEW DRONE</button>                
            </form>

            <hr>


        </div>
    </div>


</div>