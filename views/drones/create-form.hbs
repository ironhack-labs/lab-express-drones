<h2>Create a new drone</h2>

<form method="POST" action="/drones/create">
  <label>
    Name:
    <input type="text" name="name" />
  </label>
  <br />

  <label>
    Propellers:
    <input type="number" name="propellers" />
  </label>
  <br />

  <label>
    Maximum Speed:
    <input type="number" name="maxSpeed" />
  </label>
  <br />

  <button type="submit">Create</button>
</form>