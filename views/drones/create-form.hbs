<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>CREATE A NEW DRONE</h1>

            <hr>

            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label for="drone-name" class="form-label">NAME</label>
                    <input type="text" class="form-control" id="drone-name" name="name">
                </div>

                <div class="mb-3">
                    <label for="propellers" class="form-label">Propeller</label>
                    <input type="text" class="form-control" id="propellers" name="propellers"> 
                </div>

                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Speed</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">CREATE DRONE</button>
                </div>
            </form>

        </div>
    </div>
</div>


