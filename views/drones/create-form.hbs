<h2 class="index-header">Create a new drone</h2>

<div class="edit-form">
  <form method="POST" action="/drones/create" >
    <div class="form-group">
      <label for="droneName">Name</label>
      <input name="name" type="text" class="form-control" id="droneName">
    </div>
    <div class="form-group">
      <label for="dronePropellers">Propellers</label>
      <input name="propellers" type="text" class="form-control" id="dronePropellers">
    </div>
    <div class="form-group">
      <label for="droneMaxSpeed">Max Speed</label>
      <input name="maxSpeed" type="text" class="form-control" id="droneMaxSpeed">
    </div>
    <button type="submit" class="btn btn-primary button">Submit</button>
  </form>
</div>