<main class="create-form">

    <img id="drone-1" src="/images/drone_1.svg" alt="Drone Image">

    <form method="POST" action="/drones/create">
        <h2>Create a new drone</h2>

        <input type="text" placeholder="Name" name="name">
        <input type="number" placeholder="Propellers" name="propellers">
        <input type="number" placeholder="Max Speed" name="maxSpeed">
        <input type="submit" value="Add Drone">

    </form>

    <script src="/js/drones.js"></script>

</main>