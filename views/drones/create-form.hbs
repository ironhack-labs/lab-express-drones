<div>
  <h2>Create a new drone</h2>

  <form action='create' method='post'>
    <label for="name-input">Name</label>
    <input type="text" name="name" id="name-input" />

    <label for="propellers-input">Number of propellers</label>
    <input type="number" name="propellers" id="propellers-input" min="1" max="15" />

    <label for="speed-input">Speed:</label>
    <input type="number" name="maxSpeed" id="speed-input" min="1" max="99" />

    <button type="submit">Create</button>
  </form>
</div>
