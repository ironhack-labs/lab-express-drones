<dic class="container mt-5">

    <div class="row justify-content-center">

        <div class="col-3">

            <h2>Create a new drone</h2>
            <hr>
        </div>
    </div>
</dic>

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <form action="/drones/create" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers">
                </div>

                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Max Speed</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Create dron</button>
                </div>

            </form>
        </div>
    </div>
</div>