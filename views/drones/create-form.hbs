<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>New Drone</h1>

            <hr>

            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                    <label for="prop" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="prop" name="propellers">
                </div>

                <div class="mb-3">
                    <label for="speed" class="form-label">Max speed</label>
                    <input type="text" class="form-control" id="speed" name="maxSpeed">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Create Drone</button>
                </div>
            </form>

        </div>
    </div>


</div>