<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>Crear un nuevo Dron</h2>

            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="title" name="name">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Hélices</label>
                    <input type="number" class="form-control" id="propellers" name="propellers">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Velocidad Máxima</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Crear un nuevo Dron</button>
                </div>

            </form>

            <hr>
        </div>
    </div>



    <a href="/" class="btn btn-dark">Inicio</a>
</div>