<div class="edit-form">
    {{#if isEdit}}
    <h2>Edit drone's info</h2>
    {{else}}
    <h2>Create a new drone</h2>
    {{/if}}


    <form action="/drones/{{#if isEdit}}{{updatedDrone.id}}/edit{{else}}create{{/if}}" method="POST">
        <div>
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="{{updatedDrone.name}}" required>
            <label for="propellers">Propellers</label>
            <input type="number" id="propellers" name="propellers" value="{{updatedDrone.propellers}}" required>
            <label for="maxSpeed">Max speed</label>
            <input type="number" id="maxSpeed" name="maxSpeed" value="{{updatedDrone.maxSpeed}}" required>
        </div>
        <div class="submit-btn">
            <button type="submit" id="btn5">Submit</button>
        </div>
    </form>
</div>
