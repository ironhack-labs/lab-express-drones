<h2>Create a new drone</h2>
<hr>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 ">
            <form action="drones/create" method="POST">

                <div class="mb-3">
                    <label for="title" class="form-label">Name</label>
                    <input type="text" class="form-control" id="title" name="name">
                </div>

                <div class="mb-3">
                    <label for="title" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="title" name="propellers">
                </div>

                <div class="mb-3">
                    <label for="title" class="form-label">Maximum Speed</label>
                    <input type="text" class="form-control" id="title" name="maxSpeed">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark"> Send </button>
                </div>
            </form>

        </div>
    </div>
</div>