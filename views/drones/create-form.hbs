<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h2>Create your drone</h2>

            <hr>

            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                    <label for="props" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="props" name="propellers">
                </div>

                <div class="mb-3">
                    <label for="speed" class="form-label">Maximum speed</label>
                    <input type="text" class="form-control" id="speed" name="maxSpeed">
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Create drone</button>
                </div>
            </form>

        </div>
    </div>
</div>