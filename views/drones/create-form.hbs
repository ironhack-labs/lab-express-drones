                </div>

                <div class="mb-3">
                    <label for="bookDesc" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers">
                </div>

                <div class="mb-3 ">
                    <label for="maxSpeed" class="form-label">max.Speed</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>

