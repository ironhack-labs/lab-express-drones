<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Crear nuevo drone</h1>

            <hr>

            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Name</label>
                    <input type="text" class="form-control" id="title" name="name">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Propellers</label>
                    <input type="number" class="form-control" id="description" name="propellers">
                </div>

                <div class="mb-3">
                    <label for="author" class="form-label">MaxSpeed</label>
                    <input type="number" class="form-control" id="author" name="maxSpeed">
                </div>

                <button type="submit" class="btn btn-dark">Crear drone</button>
            </form>

        </div>
    </div>


</div>