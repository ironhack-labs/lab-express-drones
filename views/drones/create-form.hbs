<div class="container">
    <h2>Create a new drone</h2>
    
    <hr>
    <div class="row justify-content-center">

        <div class="col-6">

            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="droneName" name="name">
                </div>
            
                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="number" class="form-control" id="dronePropellers" name="propellers">
                </div>
            
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Max Speed</label>
                    <input type="number" class="form-control" id="droneSpeed" name="maxSpeed">
                </div>
            
                <button type="submit" class="my-5 btn btn-dark">Create new drone</button>
            
            </form>

        </div>

    </div>

</div>