<div class="main-content">
    <h2>Create a new drone</h2>
    <section>
        <form action="/drones/create-form" method="POST">
            <div class="mb-3">
                <label for="formGroupExampleInput" class="form-label">Name</label>
                <input type="text" class="form-control" id="formGroupExampleInput" name="name">
            </div>
            <div class="mb-3">
                <label for="formGroupExampleInput2" class="form-label">Propellers</label>
                <input type="number" class="form-control" id="formGroupExampleInput2" name="propellers">
            </div>
            <div class="mb-3">
                <label for="formGroupExampleInput2" class="form-label">Max Speed</label>
                <input type="number" class="form-control" id="formGroupExampleInput2" name="maxSpeed">
            </div>
            <button class="btn btn-secondary" type="submit">Send</button>
        </form>
    </section>
</div>