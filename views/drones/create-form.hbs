<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Create a new drone</h1>

            <hr>

            <form action="/drones/create" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">MaxSpeed</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>

                <button type="submit" class="btn btn-dark">Create new drone</button>
                <a href="/" class="btn btn-dark">Go back</a>
            </form>

            <hr>

        </div>
    </div>
</div>