<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Crear nuevo dron</h1>

            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Número de propulsores</label>
                    <input type="number" class="form-control" id="propellers" name="propellers">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Velocidad máxima</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-dark">Crear dron</button>
                </div>

            </form>

            <hr>
        </div>
    </div>

    <a href="/" class="btn btn-dark">Volver al inicio</a>

</div>