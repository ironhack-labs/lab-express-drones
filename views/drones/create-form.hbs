<div class="body form">
  <h2>Create a new drone</h2>
  <form method="post" action="/drones/create">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="Super Drone 2000">
    <label for="propellers">Number of propellers</label>
    <input type="number" name="propellers" id="propellers" value="42">
    <label for="speed">Maximum speed</label>
    <input type="number" name="maxSpeed" id="speed" value="88">
    <button>Submit</button>
  </form>
</div>
