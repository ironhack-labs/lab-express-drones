<h2>Create a new drone</h2>
<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-8">

            {{!-- //la ruta del action es la misma que la de router.post --}}
            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label for="field1" class="form-label">Name</label>
                    <input type="text" class="form-control" id="field1" name="name">
                </div>

                <div class="mb-3">
                    <label for="field2" class="form-label">Propeller</label>
                    <input type="text" class="form-control" id="field1" name="propellers">
                </div>

                <div class="mb-3">

                    <label for="field3" class="form-label">MaxSpeed</label>
                    <input type="text" class="form-control" id="field1" name="maxSpeed">
                </div>

                <button type="submit" class="btn btn-dark">Save Edition</button>

            </form>

        </div>

    </div>