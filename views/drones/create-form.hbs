<h2 class="h2">Create a new drone</h2>

<div class="container">
  <div class="row">
    <div class="col-12">
        <form action="/drones/create" method="post">
        <div class="drone-form">
          <label for="name">Drone's Name: </label>
          <input type="text" name="name">
        
          <label for="propellers">Number of propellers: </label>
          <input type="number" name="propellers">
        
          <label for="maxSpeed">Max Speed: </label>
          <input type="number" name="maxSpeed">
        
          <button type="submit" class="all-buttons"> Create drone</button>
        </div>
        </form>
    </div>
      
  </div>

</div>
