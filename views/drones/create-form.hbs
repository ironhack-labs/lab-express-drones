<div class="text-center">
    <h2 class="mt-3">Create a new drone</h2>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">






        <form accept="/drones" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name">

            </div>
            <div class="mb-3">
                <label for="propellers" class="form-label">Propellers</label>
                <input type="text" class="form-control" id="propellers" name="propellers">
            </div>
            <div class="mb-3">
                <label for="maxSpeed" class="form-label">Max speed</label>
                <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
            </div>
            <button type="submit" class="btn btn-primary">EDIT</button>
        </form>

    </div>
</div>